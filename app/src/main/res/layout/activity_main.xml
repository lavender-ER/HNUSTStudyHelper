    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/baseline_group_work_black_36dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/backmain"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_leaderboard_black_36dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/backmain"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_better"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:drawableTop="@drawable/baseline_drafts_black_36dp"

            android:padding="5dp"
            android:textColor="@color/backmain"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/baseline_access_alarms_black_36dp"

            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/backmain"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/ly_tab_bar"
        android:background="@color/black" />


    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/div_tab_bar"
        android:background="@color/white">

    </FrameLayout>

</RelativeLayout>